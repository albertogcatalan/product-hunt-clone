{%  extends "layout.twig" %}


{% block messageStatus %}
	{% if changes_ok is not null %}
		{% if changes_ok %}
	    <div class="alert alert-success" role="alert">Update succesfull!</div>

		{% elseif change_ok == false %}
			<div class="alert alert-danger" role="alert">Somethings wrong!</div>
	  	{% endif %}
	{% endif %}
{% endblock %}

{% block body %}
	<div class="container center">
      
        
        <div class="user-settings">
		  
			<h2>Settings</h2>
		

		<div class="row">

		  <form class="col-md-4 col-md-offset-4 center form-horizontal" role="form" method="post" action="">
		  <div class="form-group">
		    <label for="email" class="col-sm-2 control-label">Email</label>
		    <div class="col-sm-10">
		      <input type="email" class="form-control" id="email" name="email" placeholder="Email" value="{{ _user.email}}">
		    </div>
		  </div>
		  <div class="form-group">
		  <div class="checkbox">
		    <label>
		      <input type="checkbox" name="newsletter" {% if _user.newsletter == 1 %}checked{% endif %}> Newsletters
		    </label>
		  </div>
		  </div>
		  <div class="form-group">
		  <button type="submit" name="settingSubmit" class="btn btn-primary">Save changes</button>
		  </div>
		</form>
		  
		  </div>
		</div>
     

    </div>
{%  endblock %}